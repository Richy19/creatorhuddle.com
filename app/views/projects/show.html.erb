<div class="container">
  <div class="page-header">
    <% if user_signed_in? && current_user.can_manage?(@project) %>
      <div class="project-actions pull-right">
        <%= link_to 'edit project details', edit_project_path(@project), class: 'btn btn-primary' %>
        <%= link_to 'delete project', project_path(@project), data: { confirm: 'Are you sure? Deleting this project can not be undone!' }, method: :delete, class: 'btn btn-danger' %>
      </div>
    <% end %>
    <h1><%= @project.name %></h1>
  </div>

  <div class="row">
    <div class="col-md-8">

    </div>
    <div class="col-md-4">
      <div class="well">
        <%= @project.description %>
      </div>
    </div>
  </div>
</div>
