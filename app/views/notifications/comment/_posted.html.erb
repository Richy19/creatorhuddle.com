<%
  commentable_type = notification.target.commentable_type.underscore
  partial = "notifications/comment/#{notification.action}_on_#{commentable_type}"
%>

<% if lookup_context.exists? partial, nil, true %>
  <%= render partial, notification: notification %>
<% else %>
  <%= notification.sender.decorate.name %> also commented on <%= link_to notification.target.commentable.name, polymorphic_url(notification.target.commentable) %>
<% end %>
